<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>

        <!-- ControlTemplate must specify its TargetType -->
        <ControlTemplate x:Key="MyButtonTemplate" TargetType="Button">
            <!-- TemplateBinding binds the Button's Background to the Ellipse's Fill property-->
            <Ellipse Fill="{TemplateBinding Background}" />
        </ControlTemplate>

    </Window.Resources>
    
    <Grid>
        <!-- A Button's Template defines what a button looks like -->
        <Button Width="140" Height="100" Background="Orange" Content="OK"
                Template="{StaticResource MyButtonTemplate}" />
    </Grid>
</Window>
